<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="angelapps.com.tareacourseramascotas">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".POGO.MainActivity"
            android:label="Petagram"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pantallas.Favs"
            android:label="Favoritos"
            android:parentActivityName=".POGO.MainActivity">

            <!-- Soporte para versiones menores a 4.0 -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".POGO.MainActivity" />
        </activity>
        <activity
            android:name=".menus.ContactoActivity"
            android:label="Contactenos"
            android:parentActivityName=".POGO.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".POGO.MainActivity"/>
            </activity>
        <activity
            android:name=".menus.AboutActivity"
            android:label="Acerda De"
            android:parentActivityName=".POGO.MainActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".POGO.MainActivity"/>
        </activity>
    </application>

</manifest>